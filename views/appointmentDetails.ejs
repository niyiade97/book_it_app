<%- include("partials/header") %>
<section class="event-body">
    <div class="booking-details" >
    <div class="details-container">
        <h1>Appointments</h1>
        <hr>
    </div>
        <%   userRecord.appointments.forEach(function(user){    %>
           
            <div class="appointmentBox-wrapper">
                <div class="details-day-and-date">
                    <p><%=  user.day %></p>
                    <p><%=  user.date %></p>
                </div>
                <a href="fullDetails/<%= user.username %>/<%= user._id %>">
                    <div class="appointmentBox" >
                        <div>
                            <i class="fas fa-hand-pointer"></i><p><%= user.title %></p>
                        </div>
                        <div>
                        <p ><%=  user.timeFromHour + " : " + user.timeFromMin + " : " + user.timeFromMeridian %></p>
                        </div>
                        
                    </div>
                </a>
            </div>   
           
            
        <%  })   %>
    </div>

</section>
<%- include("partials/footer") %>